---
import "@fontsource/gloria-hallelujah";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portafolio 2024" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="/index.css" />
    <script
      type="text/javascript"
      src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"
    ></script>
    <title>{title}</title>
  </head>
  <body>
    <slot/>
  </body>

  <style is:global>
    body {
      background-color: #000;
      font-family: courier, monospace;
    }

    #console {
      color: #fff;
      width: 750px;
      margin-left: auto;
      margin-right: auto;
      margin-top: 100px;
      font-size: 14px;
    }

    a {
      color: #0bc;
      text-decoration: none;
    }

    #a {
      color: #0f0;
    }

    #c {
      color: #0bc;
    }

    #b {
      color: #ff0096;
    }

    #k {
      animation: change 1s;
    }

    #op {
      color: #888888;
    }

    input {
      color: white;
      background-color: transparent;
      width: 750px;
      margin-left: auto;
      margin-right: auto;
      margin-top: 100px;
    }

    @keyframes change {
      0% {
        color: #0f0;
      }
      50% {
        color: #0f0;
      }
      99% {
        color: black;
      }
    }
  </style>
</html>
